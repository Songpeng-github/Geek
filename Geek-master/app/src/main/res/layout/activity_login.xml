<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_50"
        android:layout_marginLeft="@dimen/qb_px_15"
        android:layout_marginRight="@dimen/qb_px_15">

        <ImageView
            android:id="@+id/path"
            android:layout_width="@dimen/qb_px_10"
            android:layout_height="@dimen/qb_px_17"
            android:layout_centerVertical="true"
            android:background="@mipmap/path"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="返回"
            android:layout_centerVertical="true"
            android:textSize="@dimen/qb_px_17"
            android:layout_marginLeft="@dimen/qb_px_20"/>

        <ImageView
            android:layout_width="@dimen/qb_px_94"
            android:layout_height="@dimen/qb_px_30"
            android:src="@mipmap/logo"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_405"
        android:background="@mipmap/moban"
        android:layout_marginLeft="@dimen/qb_px_15"
        android:layout_marginRight="@dimen/qb_px_15"
        android:layout_marginTop="@dimen/qb_px_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:text="登录"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/qb_px_23"
            android:layout_marginTop="@dimen/qb_px_30"
            android:layout_marginLeft="@dimen/qb_px_20"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_40"
            android:layout_marginRight="@dimen/qb_px_40"
            android:orientation="vertical"
            android:layout_centerInParent="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_60">

                <EditText
                    android:id="@+id/number"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/qb_px_60"
                    android:hint="账号"
                    android:textColorHint="#000000"
                    android:textSize="@dimen/qb_px_18"
                    android:background="@null"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/qb_px_1"
                    android:background="#50000000"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_60"
                android:layout_marginTop="@dimen/qb_px_20">

                <EditText
                    android:id="@+id/pass"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/qb_px_60"
                    android:hint="密码"
                    android:textColorHint="#000000"
                    android:textSize="@dimen/qb_px_18"
                    android:background="@null"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/qb_px_1"
                    android:background="#50000000"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/qb_px_20"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/forget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="忘记密码?"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/qb_px_14" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/btn_next"
            android:layout_width="@dimen/qb_px_66"
            android:layout_height="@dimen/qb_px_66"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/qb_px_5"
            android:src="@mipmap/next"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/weibo"
            android:layout_width="@dimen/qb_px_44"
            android:layout_height="@dimen/qb_px_44"
            android:src="@mipmap/weibo" />

        <ImageView
            android:id="@+id/qq"
            android:layout_width="@dimen/qb_px_44"
            android:layout_height="@dimen/qb_px_44"
            android:layout_marginLeft="@dimen/qb_px_20"
            android:src="@mipmap/qq"/>
    </LinearLayout>

    <TextView
        android:id="@+id/registered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/qb_px_50"
        android:text="没有账号？ 注册"
        android:textSize="@dimen/qb_px_14" />
</LinearLayout>