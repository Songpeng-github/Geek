<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/red"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_margin="7dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/path"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:src="@mipmap/path"
            android:layout_width="@dimen/qb_px_22"
            android:layout_height="@dimen/qb_px_22" />

        <TextView
            android:layout_gravity="center"
            android:layout_width="@dimen/qb_px_42"
            android:layout_height="@dimen/qb_px_25"
            android:layout_margin="5dp"
            android:text="返回"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="149dp"
            android:layout_height="@dimen/qb_px_60"
            android:layout_alignTop="@+id/linearlayout"
            android:layout_alignBottom="@+id/linearlayout"
            android:layout_gravity="center"
            android:src="@mipmap/logo" />
    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/linearlayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="83dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="-84dp"
        android:paddingBottom="10dp"
        android:src="@mipmap/moban" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_150"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="@dimen/qb_px_7"
        android:layout_marginBottom="452dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="@dimen/qb_px_60"
            android:layout_height="@dimen/qb_px_34"
            android:layout_gravity="center"
            android:text="登录"
            android:textColor="@color/red"
            android:textSize="23sp" />

        <EditText
            android:id="@+id/number"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_34"
            android:hint="请输入账号"
            android:textColor="#ff333333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_34"
            android:hint="请输入密码"
            android:textColor="#ff333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/forget"
            android:layout_width="@dimen/qb_px_68"
            android:layout_height="@dimen/qb_px_23"
            android:layout_gravity="right|center_vertical"

            android:layout_marginRight="3.0dip"
            android:text="忘记密码？"
            android:textColor="#ff333333"
            android:textSize="14sp" />
    </LinearLayout>


    <ImageView
        android:id="@+id/btn_next"
        android:layout_width="@dimen/qb_px_53"
        android:layout_height="@dimen/qb_px_53"
        android:layout_alignTop="@+id/forgetpassword"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="349dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="137dp"
        android:paddingBottom="10dp"
        android:src="@mipmap/next"
        tools:ignore="NotSibling" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="59dp"
        android:background="@color/red"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/weibo"
            android:layout_width="@dimen/qb_px_54"
            android:layout_height="@dimen/qb_px_54"
            android:layout_margin="10dp"
            android:src="@mipmap/weibo" />

        <ImageView
            android:id="@+id/qq"
            android:layout_width="@dimen/qb_px_54"
            android:layout_height="@dimen/qb_px_54"
            android:src="@mipmap/qq" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="26dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/white"
            android:layout_width="@dimen/qb_px_70"
            android:layout_height="@dimen/qb_px_23"
            android:text="没有账号？"
            android:textSize="15sp" />

        <TextView
            android:textColor="@color/white"
            android:id="@+id/registered"
            android:layout_width="@dimen/qb_px_30"
            android:layout_height="@dimen/qb_px_23"
            android:text="注册"
            android:textSize="15sp" />

    </LinearLayout>
</RelativeLayout>